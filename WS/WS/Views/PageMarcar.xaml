<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WS.Views.PageMarcar" Title="Marcar">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Sístole:" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold"/>
            <Entry x:Name="txtSistole" Placeholder="Digite o valor da Sístole" Keyboard="Numeric" />
            <Label Text="Diástole:" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold"/>
            <Entry x:Name="txtDiastole" Placeholder="Digite o valor da Diástole" Keyboard="Numeric"/>
            <StackLayout Margin="50">
                <Button x:Name="btnGravar" CornerRadius="15" Text="Gravar" BackgroundColor="Cyan" FontAttributes="Bold" FontSize="Medium" Clicked="btnGravar_Clicked" />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>